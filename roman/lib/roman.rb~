class Roman

  def self.convert(number)
     if number == 1
      puts "I"
           elsif number == 2
            print "II"
            elsif number == 3
             print "III"
             elsif number == 4
              print "IV"
             elsif number == 5
              print "V"
             elsif number == 6
              print "VI"
             elsif number == 7
              print "VII"
             elsif number == 8
              print "VIII"
             elsif number == 9
              print "IX"  
     elsif number < 50
       div = number / 10
       for i in 1..div
         print "X"
       end
       rem = number % 10
              
         if rem == 1
            puts "I"
           elsif rem == 2
            puts "II"
            elsif rem == 3
             puts "III"
             elsif rem == 4
              puts "IV"
             elsif rem == 5
              puts "V"
             elsif rem == 6
              puts "VI"
             elsif rem == 7
              puts "VII"
             elsif rem == 8
              puts "VIII"
             elsif rem == 9
              puts "IX"   
         end       


        end
  end
 end






